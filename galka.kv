<View>
    rows: 3
    padding: 30

    news_items: news_items
    menu_button: menu_button
    pagi_section: pagi_section

    BoxLayout:
        size_hint: 1, 0.1
        Label:
            text: "galka.if.ua"
        Button:
            id: menu_button
            size_hint: 0.2, 1
            text: "menu"
            background_color: 0.7, 0.1, 0.9, 1
            on_release:
                root.click_menu()
    ScrollView:
        size_hint: 1, 0.8
        BoxLayout:
            size_hint_y: None
            height: 1400
            padding: 0, 0, 0, 20
            id: news_items

    BoxLayout:
        id: pagi_section
        size_hint: 1, 0.1